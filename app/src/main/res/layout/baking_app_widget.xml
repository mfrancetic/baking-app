<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/widget_recipe_image"
        style="@style/RecipeImageViewStyle"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/button_padding"
        android:background="@color/colorPrimaryLight"
        android:contentDescription="@string/image_content_description"
        android:src="@drawable/cupcake" />

    <TextView
        android:id="@+id/widget_recipe_name"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@id/widget_recipe_ingredients"
        android:layout_alignStart="@id/widget_recipe_ingredients"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/colorTextIcons"
        android:background="@color/colorPrimaryDark"
        android:padding="@dimen/button_padding"
        android:textStyle="bold"
        android:textAlignment="center"
        tools:text="Cheesecake" />

    <TextView
        android:id="@+id/widget_recipe_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_recipe_name"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/button_padding"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimaryLight"
        android:contentDescription="@string/appwidget_text"
        android:textColor="#000000"
        tools:text="Ingredients" />
</RelativeLayout>